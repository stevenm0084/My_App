<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pc1.myapp000.EndGameResultActivity"
    android:background="#ff27c2ff"
    android:id="@+id/layout_lostgame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtview_result"
        android:textColor="#ffffbf50"
        android:textSize="48dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="You Won!" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtn_playagain"
        android:src="@drawable/play_again"
        android:background="#ff27c2ff"
        android:layout_above="@+id/imgbtn_highscores"
        android:layout_marginBottom="47dp"
        android:layout_alignEnd="@+id/btn_submit"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:src="@drawable/btn_submit"
        android:background="#ff27c2ff"
        android:layout_above="@+id/imgbtn_playagain"
        android:layout_marginBottom="42dp"
        android:layout_alignEnd="@+id/playername"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtn_highscores"
        android:src="@drawable/high_scores"
        android:background="#ff27c2ff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_name"
        android:id="@+id/lbl_highscores"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="32dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/txtview_result"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/playername"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_below="@+id/lbl_highscores"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/txtview_result" />

</RelativeLayout>
